# LoveRose Production Environment Configuration

# Database Configuration
export DATABASE_HOST=your-production-db-host
export DATABASE_PORT=5432
export DATABASE_NAME=LoveRoseDB
export DATABASE_USER=userloverose
export DATABASE_PASSWORD=your-secure-password

# JWT Configuration
export JWT_KEY=your-super-secret-jwt-key-at-least-32-characters-long
export JWT_ISSUER=LoveRose.API
export JWT_AUDIENCE=LoveRose.Users
export JWT_EXPIRY_HOURS=1

# API Configuration
export API_URL=https://api.loverose.com
export FRONTEND_URL=https://loverose.com
export CORS_ORIGINS=https://loverose.com,https://www.loverose.com

# Logging Configuration
export LOG_LEVEL=Information
export LOG_FILE_PATH=/var/log/loverose/api.log

# Redis Configuration (for caching)
export REDIS_HOST=your-redis-host
export REDIS_PORT=6379
export REDIS_PASSWORD=your-redis-password

# Email Configuration
export SMTP_HOST=smtp.gmail.com
export SMTP_PORT=587
export SMTP_USERNAME=your-email@gmail.com
export SMTP_PASSWORD=your-app-password

# File Storage Configuration
export STORAGE_TYPE=aws-s3
export AWS_ACCESS_KEY_ID=your-aws-access-key
export AWS_SECRET_ACCESS_KEY=your-aws-secret-key
export AWS_REGION=us-east-1
export AWS_S3_BUCKET=loverose-storage

# Monitoring Configuration
export ENABLE_METRICS=true
export METRICS_ENDPOINT=/metrics
export HEALTH_CHECK_ENDPOINT=/health

# Security Configuration
export ENABLE_RATE_LIMITING=true
export RATE_LIMIT_REQUESTS_PER_MINUTE=100
export ENABLE_CORS=true
export ENABLE_HTTPS_REDIRECT=true

# Development/Production Flag
export ASPNETCORE_ENVIRONMENT=Production
export ASPNETCORE_URLS=https://+:443;http://+:80
