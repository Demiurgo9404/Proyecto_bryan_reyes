{
  "name": "love-rose",
  "version": "1.0.0",
  "description": "LoveRose - AplicaciÃ³n de citas con videollamadas",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:init": "node server/scripts/init-db.js",
    "db:reset": "NODE_ENV=development node -e \"require('dotenv').config(); const { sequelize } = require('./server/config/database'); sequelize.sync({ force: true }).then(() => { console.log('Base de datos reiniciada correctamente.'); process.exit(0); }).catch(console.error);\"",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all"
  },
  "keywords": [
    "dating",
    "videochat",
    "social",
    "node",
    "react"
  ],
