{
  "name": "loverose-backend",
  "version": "1.0.0",
  "description": "Backend para LoveRose - Plataforma de red social",
  "main": "backend/server.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "nodemon --exec node -r dotenv/config backend/src/server.js dotenv_config_path=.env.development",
    "build": "npm-run-all build:frontend build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --production",
    "start": "NODE_ENV=production node backend/src/server.js",
    "start:dev": "NODE_ENV=development nodemon --exec node -r dotenv/config backend/src/server.js dotenv_config_path=.env.development",
    "start:staging": "NODE_ENV=staging node -r dotenv/config backend/src/server.js dotenv_config_path=.env.staging",
    "start:prod": "NODE_ENV=production node -r dotenv/config backend/src/server.js dotenv_config_path=.env.production",
    "test": "npm-run-all test:frontend test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm-run-all lint:frontend lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "setup-db": "node scripts/setup-database.js",
    "check-db": "node scripts/check-db-connection.js",
    "migrate": "psql -h localhost -U postgres -d Love_rose_db -f scripts/create-database-schema.sql",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1"
  },
  "keywords": [
    "social-media",
    "backend",
    "api",
    "postgresql",
    "express"
  ],
  "author": "LoveRose Team",
  "license": "MIT"
}
