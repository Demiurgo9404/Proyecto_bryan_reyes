# ===================================
# Application Configuration
# ===================================
NODE_ENV=development
PORT=3001
API_PREFIX=/api
API_VERSION=v1

# ===================================
# Database Configuration
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=loverose_db
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_DIALECT=postgres
DB_POOL_MAX=5
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ===================================
# JWT Authentication
# ===================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# Email Configuration (for password reset)
# ===================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=LoveRose <noreply@loverose.com>

# ===================================
# Frontend URLs (for CORS and email links)
# ===================================
FRONTEND_URL=http://localhost:3000

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per windowMs

# ===================================
# File Uploads
# ===================================
MAX_FILE_UPLOAD=5 * 1024 * 1024  # 5MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ===================================
# Logging
# ===================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===================================
# Security
# ===================================
CORS_ORIGIN=http://localhost:3000
ENABLE_CORS=true
ENABLE_HTTPS=false

# ===================================
# Session (if using sessions)
# ===================================
SESSION_SECRET=your_session_secret_here

# ===================================
# Redis (for caching/sessions)
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================================
# Feature Flags
# ===================================
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_RATE_LIMITING=true

# ===================================
# API Keys (External Services)
# ===================================
# Example: STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
