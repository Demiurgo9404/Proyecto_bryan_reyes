# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=LoveRoseDB
DB_USER=userloverose
DB_PASSWORD=Mercurio2025

# Configuración del servidor
PORT=3001
NODE_ENV=development

# JWT Secret (generar uno seguro para producción)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# CORS Origins (separados por comas)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
WEBRTC_TURN_SERVERS=

# Email Configuration (para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@loverose.com

# Redis (para sesiones y cache - opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
