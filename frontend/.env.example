# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# Authentication
VITE_AUTH_TOKEN_EXPIRY=86400 # 24 horas en segundos
VITE_REFRESH_TOKEN_EXPIRY_DAYS=7
VITE_JWT_SECRET=tu_clave_secreta_muy_segura_aqui

# Environment
VITE_APP_ENV=development
NODE_ENV=development

# Application
VITE_APP_NAME="Love Rose"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Plataforma de contenido para adultos"

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_LOGGING=true
VITE_ENABLE_STRIPE=false
VITE_ENABLE_VIDEO_CALLS=true

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_ITEMS_PER_PAGE=12
VITE_MAX_UPLOAD_SIZE=50
VITE_AVATAR_UPLOAD_PATH=/uploads/avatars
VITE_MEDIA_UPLOAD_PATH=/uploads/media

# Notifications
VITE_NOTIFICATION_TIMEOUT=5000
VITE_TOAST_POSITION=top-right

# WebRTC Configuration (para video llamadas)
VITE_WEBRTC_ICE_SERVERS={"iceServers":[{"urls":["stun:stun.l.google.com:19302","stun:stun1.l.google.com:19302"]}]}

# URLs de redirección
VITE_LOGIN_REDIRECT=/dashboard
VITE_LOGOUT_REDIRECT=/login
VITE_UNAUTHORIZED_REDIRECT=/login

# Tiempos de caché (en segundos)
VITE_API_CACHE_TTL=300
VITE_ASSET_CACHE_TTL=86400

# Configuración de Stripe (opcional)
# VITE_STRIPE_PUBLIC_KEY=pk_test_tu_clave_publica
# VITE_STRIPE_SECRET_KEY=sk_test_tu_clave_secreta

